<% community_comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <div class = "comment-box">
      <%= link_to user_path(comment.user.id) do %>
        <div class = "comment_image">
          <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: '50x50' %>
        </div>
        <div class = "comment_user"><%= comment.user.name %></div>
      <% end %>
      <div class = "comment_content"><%= comment.body %></div></br>
	</div>
  <% end %>
<% end %>


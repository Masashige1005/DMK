<div class = "login_form">
  <h1 class = "login_title">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(  resource_name)) do |f| %>
    <div class="login_field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-field', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="login_field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-field', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", :class=>"login_btn" %>
    </div>
  <% end %>
  <div class = "link_field">
    <%= render "devise/shared/links" %>
  </div>
</div>

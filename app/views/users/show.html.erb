<div class = "container">
	<%= link_to @user.follow_count, following_user_path(@user.id) %>
	<%= link_to @user.followers_count, followed_user_path(@user.id) %>
	<h2>お気に入り一覧</h2>
	<div class="infinite-list jscroll">
		<% @favorites.each do |favorite| %>
			<div class = "favorite_box">
  				<%= link_to song_path(favorite.song.id) do %>
  					<%= image_tag favorite.song.image.to_s, size: '80x50' %>
    				<%= favorite.song.name %>
    			<% end %>
    		</div>
		<% end %>
		<%= paginate @favorites %>
	</div>
	<h2>投稿曲一覧</h2>
	<div class="infinite-list jscroll">
		<% @songs.each do |song| %>
			<div class = "song_user">
				<%= link_to song_path(song.id) do %>
					<%= image_tag song.image.to_s, size: '80x50' %>
					<%= song.name %>
				<% end %>
			</div>
		<% end %>
	</div>
	<%= paginate @favorites %>

	<div id="user-<%= @user.id %>" class="collection-item">
    	<%= render 'users/follow', user: @user %>
	</div>
</div>
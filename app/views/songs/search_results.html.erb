  <div class="container">
    <h3>楽曲検索結果</h3>
    <% if @songs.empty? %>
      <p><%= "#{params[:q][:name_or_artist_cont ]}  に一致する検索結果は見つかりませんでした" %></p>
      <p><%= "検索のヒント:" %></p>
      <ul>
        <li><%= キーワードに誤字・脱字がないか確認します。%></li>
        <li><%= 別のキーワードを試してみます。%></li>
      </ul>
    <% else %>
      <div class="sort-area">
      <%= search_form_for @q, url: search_path do |f| %>
        <%= f.select( :sorts, { '並び替え': 'id desc', '価格の安い順': 'price asc', '価格の高い順': 'price desc', '発売の古い順': 'release_date asc', '発売の新しい順': 'release_date desc'} , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} ) %>
        <%= f.button :type => "submit", style: 'border-style: none;' do %>
            <i class="fas fa-search"></i>
        <% end %>
        <i>Sort</i>
      <% end %>
    </div>
    <% end %>

    <hr class="my-4">
    <% @songs.each do |song| %>
    <div class="row">
      <div class="col-md-7 col-md-offset-2">
        <div class="row">
          <%= link_to song_path(song.id) do %>
            <div class="col-md-3 pucture_field">
                <%= image_tag song.image.to_s, size: '120x85' %>
            </div>
            <div class="col-md-9 name_space">
              <p><%= song.name %></p>
              <p><%= song.artist %></p>
            </div>
            <% end %>
        </div>
      </div>
    </div>
      <hr class="my-4">
    <% end %>
  </div>
